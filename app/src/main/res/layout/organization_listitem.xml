<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_JobProcess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/padding_10"
        app:cardElevation="@dimen/height_5"
        android:layout_margin="@dimen/margin_5"
        app:cardMaxElevation="@dimen/margin_8"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_5"
            android:background="@drawable/card_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5">
                <ImageView
                    android:id="@+id/profile_img"
                    android:layout_width="@dimen/img_width_60"
                    android:layout_height="@dimen/img_width_60"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_launcher_background"/>
                <TextView
                    android:id="@+id/name"
                    android:layout_toRightOf="@id/profile_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:text="@string/feed"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18"
                    />
                <TextView
                    android:id="@+id/time"
                    android:layout_toRightOf="@id/profile_img"
                    android:layout_below="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:text="22 mins"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_18"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/txt_description"
                android:layout_toRightOf="@id/profile_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:gravity="start"
                android:layout_marginLeft="@dimen/margin_5"
                android:text=""
                android:maxLines="3"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/img_width_30"
                        android:layout_height="@dimen/img_width_30"
                        android:layout_gravity="center"
                        android:padding="@dimen/margin_5"
                        android:background="@drawable/yellow_circle_bg"
                        android:src="@drawable/donate_icon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:text="@string/donate"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_marginTop="@dimen/margin_5"
                        android:textSize="@dimen/text_size_13"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/img_width_30"
                        android:layout_height="@dimen/img_width_30"
                        android:layout_gravity="center"
                        android:padding="@dimen/margin_8"
                        android:background="@drawable/red_circle_bg"
                        android:src="@drawable/ic_baseline_favorite_24"/>
                    <TextView
                        android:id="@+id/txt_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center_vertical"
                        android:text="122 likes"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_marginTop="@dimen/margin_5"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_13"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/img_width_30"
                        android:layout_height="@dimen/img_width_30"
                        android:layout_gravity="center"
                        android:padding="@dimen/margin_8"
                        android:background="@drawable/blue_circle_bg"
                        android:src="@drawable/chat_icon"/>

                    <TextView
                        android:id="@+id/txt_comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:text="0 comments"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_marginTop="@dimen/margin_5"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_13"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/img_width_30"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:background="@drawable/grey_circle_bg"
                    android:layout_height="@dimen/img_width_30">
                    <ImageView
                        android:layout_width="@dimen/img_width_25"
                        android:layout_height="@dimen/img_height_25"
                        android:layout_gravity="center"
                        android:padding="3dp"
                        android:src="@drawable/ic_baseline_more_horiz_24"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>